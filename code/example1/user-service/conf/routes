GET     /                           controllers.Application.ping

GET    /api/v1/users                controllers.api.v1.Users.index
POST   /api/v1/users                controllers.api.v1.Users.create

GET    /api/v1/users/:id            controllers.api.v1.Users.show(id: Long)
PUT    /api/v1/users/:id            controllers.api.v1.Users.update(id: Long)
DELETE /api/v1/users/:id            controllers.api.v1.Users.delete(id: Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
